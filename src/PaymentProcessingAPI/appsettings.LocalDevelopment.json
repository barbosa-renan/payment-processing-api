{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PaymentProcessingDB_Dev;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "AzureKeyVault": {
    "VaultUri": ""
  },
  "AzureServiceBus": {
    "ConnectionString": "",
    "PaymentQueue": "payment-queue-dev",
    "RefundQueue": "refund-queue-dev",
    "NotificationQueue": "notification-queue-dev",
    "PaymentProcessedQueue": "payment-processed-queue-dev",
    "PaymentFailedQueue": "payment-failed-queue-dev",
    "NotificationsQueue": "notifications-queue-dev",
    "RefundRequestsQueue": "refund-requests-queue-dev",
    "HighValueApprovalQueue": "high-value-approval-queue-dev"
  },
  "ServiceBusConfiguration": {
    "PaymentProcessedQueue": "payment-processed-dev",
    "PaymentFailedQueue": "payment-failed-dev",
    "NotificationsQueue": "notifications-dev",
    "RefundRequestsQueue": "refund-requests-dev",
    "HighValueApprovalQueue": "high-value-approval-dev",
    "MaxRetryAttempts": 3,
    "RetryDelay": "00:00:05",
    "MaxRetryDelay": "00:05:00"
  },
  "PaymentGateway": {
    "ApiKey": "",
    "Environment": "sandbox",
    "TimeoutSeconds": 30,
    "BaseUrl": "https://sandbox-api.paymentgateway.com"
  },
  "EventGrid": {
    "TopicEndpoint": "",
    "AccessKey": ""
  },
  "Jwt": {
    "SecretKey": "",
    "Issuer": "PaymentProcessingAPI-Dev",
    "Audience": "PaymentProcessingAPI-Dev-Clients",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "IpRateLimit": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "*/payments/*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "AllowedHosts": "*"
}