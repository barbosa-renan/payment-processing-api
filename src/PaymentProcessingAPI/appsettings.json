{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PaymentProcessingDB;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "AzureKeyVault": {
    "VaultUri": "https://kv-payment-api.vault.azure.net/"
  },
  "AzureEventGrid": {
    "TopicEndpoint": "https://your-eventgrid-topic.eventgrid.azure.net/api/events",
    "AccessKey": "your-eventgrid-access-key"
  },
  "AzureServiceBus": {
    "PaymentQueue": "payment-queue",
    "RefundQueue": "refund-queue",
    "NotificationQueue": "notification-queue",
    "PaymentProcessedQueue": "payment-processed-queue",
    "PaymentFailedQueue": "payment-failed-queue",
    "NotificationsQueue": "notifications-queue",
    "RefundRequestsQueue": "refund-requests-queue",
    "HighValueApprovalQueue": "high-value-approval-queue"
  },
  "ServiceBusConfiguration": {
    "PaymentProcessedQueue": "payment-processed",
    "PaymentFailedQueue": "payment-failed",
    "NotificationsQueue": "notifications",
    "RefundRequestsQueue": "refund-requests",
    "HighValueApprovalQueue": "high-value-approval",
    "MaxRetryAttempts": 3,
    "RetryDelay": "00:00:05",
    "MaxRetryDelay": "00:05:00"
  },
  "PaymentGateway": {
    "ApiKey": "your-payment-gateway-api-key",
    "Environment": "sandbox",
    "TimeoutSeconds": 30,
    "BaseUrl": "https://sandbox-api.paymentgateway.com"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long",
    "Issuer": "PaymentProcessingAPI",
    "Audience": "PaymentProcessingAPI-Clients",
    "ExpiryMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Properties": {
      "ApplicationName": "PaymentProcessingAPI"
    }
  },
  "AllowedHosts": "*",
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/payment/process",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "HealthChecks": {
    "Enabled": true,
    "UI": {
      "Enabled": true,
      "Path": "/health-ui"
    }
  },
  "Cors": {
    "AllowedOrigins": [ "https://localhost:3000", "https://your-frontend-domain.com" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "Content-Type", "Authorization", "X-Correlation-ID" ]
  }
}
